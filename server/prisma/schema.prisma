generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Wallet {
  id             String        @id @default(uuid()) @map("_id")
  walletAddress  String
  chainId        Int
  dailyTossCount Int
  totalTossCount Int
  lastTossDate   DateTime?
  streak         Int
  xdcBalance   Float
  dopuBalance   Float
  tosses         TossLog[]
  leaderboard    Leaderboard[]

  @@unique([walletAddress, chainId]) // Composite unique constraint
}

model TossLog {
  id           String   @id @default(uuid()) @map("_id")
  walletId     String
  timestamp    DateTime @default(now())
  theme        String
  tokensBurned Float
  chainId        Int
  currency      CurrencyType  
  wallet Wallet @relation(fields: [walletId], references: [id]) // Relation via Wallet's id
}

enum CurrencyType {
  XDC
  DOPU
}
model Leaderboard {
  id           String @id @default(uuid()) @map("_id")
  walletId     String
  tokensBurned Float
  chainId        Int
  currency      CurrencyType  
  wallet Wallet @relation(fields: [walletId], references: [id]) // Relation via Wallet's id
}
